<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.xinyi.dialogstretch.StretchLinearLayout
            android:id="@+id/ll_ui_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/round_white_shape_15dp"
            android:orientation="vertical"
            android:padding="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_ann_particulars_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/stretch_animation_test"
                android:textColor="@color/dark_primary"
                android:textSize="15sp"
                />

            <TextView
                android:id="@+id/tv_particulars_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_particulars_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="10dp"
                android:background="@drawable/ripple_white_gray"
                android:padding="7dp"
                android:text="@string/common_confirm"
                android:textColor="@color/common_accent_color"
                android:textSize="15sp"
                />
        </com.xinyi.dialogstretch.StretchLinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>